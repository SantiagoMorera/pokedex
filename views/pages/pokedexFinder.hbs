<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokedex</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap"
      rel="stylesheet"
    />
    <script src="/public/js/finder.js" type="text/javascript" defer></script>
    <link href="/public/styles/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <div class="pokedex-finder-wrapper">
      <form action="" onsubmit="searchPokemon(event)">
        <input
          type="text"
          name="pokemon"
          placeholder="Busca un pokémon"
          autocomplete="off"
        />
      </form>
      <div id="data-poke-card" class="poke-card">
        <div id="data-poke-name">Pokédex</div>
        <div id="data-poke-img-container" class="img-container">
          <img
            id="data-poke-img"
            class="poke-img"
            src="/public/img/poke-shadow.webp"
          />
        </div>
        <div id="data-poke-id"></div>
        <div id="data-poke-types" class="poke-types"></div>
        <div id="data-poke-stats" class="poke-stats"></div>
        <div id="data-button"></div>
      </div>
    </div>
  </body>
</html>